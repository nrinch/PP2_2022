<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PP2_2022" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalculatorButtonsStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
<!--        <item name="android:layout_margin">@dimen/small_margin</item>-->
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>

    <style name="OperationButtonsStyle" parent="CalculatorButtonsStyle">
        <item name="backgroundTint">@color/background_operation_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AdditionalFunctionsButtonsStyle" parent="CalculatorButtonsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/background_additional_functions_color</item>
    </style>
</resources>